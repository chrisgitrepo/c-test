{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["./packages"],
  "exclude": [
    "node_modules",
    "./packages/*/dist",
    "./packages/*/node_modules",
    "./packages/*/test",
    "./packages/e2e"
  ]
}